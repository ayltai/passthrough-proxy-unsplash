{
    "extends"       : [
        "eslint:recommended"
    ],
    "env"           : {
        "node"     : true,
        "commonjs" : true,
        "es6"      : true
    },
    "globals"       : {
        "Atomics"           : "readonly",
        "SharedArrayBuffer" : "readonly"
    },
    "parser"        : "babel-eslint",
    "parserOptions" : {
        "ecmaVersion"  : 2018,
        "sourceType"   : "module"
    },
    "rules"         : {
        "indent"                : [
            "error",
            4,
            {
                "SwitchCase" : 1
            }
        ],
        "linebreak-style"       : [
            "error",
            "unix"
        ],
        "quotes"                : [
            "error",
            "single"
        ],
        "no-extra-boolean-cast" : "off",
        "no-undef"              : "off",
        "semi"                  : [
            "error",
            "always"
        ]
    }
}
